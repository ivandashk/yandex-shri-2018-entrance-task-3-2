{
    "type": "object",
    "required": ["devices", "rates", "maxPower"],
    "properties": {
        "devices": { 
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["id", "name", "power", "duration"],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "[A-Z0-9]{32}"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "power": {
                        "type": "integer",
                        "exclusiveMinimum": 0
                    },
                    "duration": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 24
                    },
                    "mode": {
                        "type": "string",
                        "enum": ["day", "night"]
                    }
                }
            } 
        },
        "rates": { 
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["from", "to", "value"],
                "properties": {
                    "from": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 24
                    },
                    "to": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 24
                    },
                    "value": {
                        "type": "number",
                        "exclusiveMinimum": 0
                    }
                }
            } 
        },
        "maxPower": { 
            "type": "integer",
            "exclusiveMinimum": 0
        }
    }
}